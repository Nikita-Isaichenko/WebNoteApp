<!DOCTYPE html>
<html lang="en" style="height: 100%;">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/style.css" rel="stylesheet" asp-append-version="true">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <title>NoteApp</title>
</head>

<body class="bg-light bg-gradient" style="height: 100%;" onload="getNotes();">
    <header class="bg-dark text-center text-lg-start">
        <div class="text-center p-3 text-white" style="background-color: rgba(0, 0, 0, 0.2);">
            <h3>NoteApp</h3>
        </div>
    </header>
    <main class="container rounded h-auto">
        <div class="row h-auto">
            <div class="col-sm-4 h-auto">
                <div class="container pb-3">
                    <div class="row pb-2">
                        <div class="col-md-12 mt-3">
                            <label for="category mb-3" class="form-label mb-1">
                                Categories:
                            </label>
                            <select class="form-control mb-3 category" id="category_filter">
                                @for (int i = 0; i < ViewBag.NotesCategoryList.Length; i++)
                                {
                                    <option value="@ViewBag.NotesCategoryList[i]">@ViewBag.NotesCategoryList[i]</option>
                                }
                            </select>
                            <label for="note" class="form-label mb-1">
                                Notes:
                            </label>
                            <select class="form-control mb-3" id="notes_titles_selector" size="10" multiple>
                            </select>
                            <div class="row gx-3" id="row-btn-1">
                                <div class="col-lg-4 mb-3">
                                    <button class="btn btn-primary" id="create">
                                        Create
                                    </button>
                                </div>
                                <div class="col-lg-4 mb-3">
                                    <button class="btn btn-secondary" id="edit">
                                        Edit
                                    </button>
                                </div>
                                <div class="col-lg-4 mb-3">
                                    <button class="btn btn-secondary" id="delete">
                                        Delete
                                    </button>
                                </div>
                            </div>
                            <div class="row gx-3" id="row-btn-2" hidden>
                                <div class="col-lg-4 mb-3">
                                    <button class="btn btn-primary" id="save">
                                        Save
                                    </button>
                                </div>
                                <div class="col-lg-4 mb-3">
                                    <button class="btn btn-secondary" id="cancel">
                                        Cancel
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-sm-8 h-auto">
                <div class="container pb-3">
                    <input type="text" class="form-control mt-3" id="schema" placeholder="Тема" readonly />
                    <span class="text-danger" id="errorMessage" hidden></span><br />
                    <label for="category my-3" class="form-label mb-1">
                        Category:
                    </label>
                    <select class="form-control mb-3 category" id="category" disabled>
                        @for (int i = 1; i < ViewBag.NotesCategoryList.Length; i++)
                        {
                            <option value="@ViewBag.NotesCategoryList[i]">@ViewBag.NotesCategoryList[i]</option>
                        }
                    </select>
                    <div class="row pb-2">
                        <div class="col-md mb-3">
                            <label class="form-label mb-1" for="created">Created:</label>
                            <input class="form-control" type="text" id="created" readonly>
                        </div>
                        <div class="col-md mb-3">
                            <label class="form-label mb-1" for="modified">Modified:</label>
                            <input class="form-control" type="text" id="modified" readonly>
                        </div>
                    </div>
                    <input type="text" id="noteId" hidden>
                    <textarea class="w-100 form-control" style="height: 300px;" id="text" readonly></textarea>
                </div>
            </div>
        </div>
    </main>
    <footer class="bg-dark text-center text-lg-start">
        <div class="text-center p-3 text-white" style="background-color: rgba(0, 0, 0, 0.2);">
            © 2023 Copyright:
            <a class="text-dark text-white" href="https://github.com/Nikita-Isaichenko">Nikita Isaichenko</a>
        </div>
    </footer>
    <div class="modal" id="errorModal" tabindex="-1">
        <div class="modal-dialog dialog-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Attention!</h5>
                    <button type="button" class="btn-close" id="btnCloseModal" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                </div>
                <div class="modal-body">
                    <p id="modal_body_text"></p>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <script type="text/javascript" src="~/js/apiRequests.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/validation.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/site.js" asp-append-version="true"></script>
   
</body>

</html>